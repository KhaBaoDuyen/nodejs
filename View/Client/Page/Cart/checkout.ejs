<div class="checkout-page col-10 m-auto" id="checkout">
   <form action="/order" method="post" class="container container_checkout m-auto">
      <input type="hidden" name="method" value="POST">

      <div class="content-right col-12 mb-3">
         <div class="content1">
            <table>
               <thead class="text-center">
                  <tr>
                     <th></th>
                     <th colspan="2">Sản phẩm</th>
                     <th>Đơn giá</th>
                     <th>Số lượng</th>
                     <th>Thành tiền</th>
                  </tr>
               </thead>
               <tbody class="text-center">
                  <!-- Repeat this <tr> block for each item -->
                  <tr>
                     <td>1</td>
                     <td width="10%" class="p-2">
                        <img width="100%" src="/upload/Products/20241209091231_main.jpg" alt="Ảnh sản phẩm">
                     </td>
                     <td width="230px" class="p-1"><span>Cây lá màu</span></td>
                     <td>1,000,000đ</td>
                     <td>2</td>
                     <td>2,000,000đ</td>
                  </tr>
                  <!-- End repeat -->
               </tbody>
            </table>
         </div>
      </div>

      <div class="content-left col-12 row m-auto">
         <h3>Địa chỉ nhận hàng</h3>
         <div class="col-7 row">
            <div class="form-group col-6">
               <label for="name">Tên</label>
               <input type="text" placeholder="Vui lòng nhập tên người nhận" name="name" class="" value="">
            </div>

            <div class="form-group col-6">
               <label for="phone">Số điện thoại</label>
               <input type="text" placeholder="Vui lòng nhập số điện thoại" name="phone" value="" class="">

            </div>

            <div class="form-group">
               <label for="email">Email</label>
               <input type="text" placeholder="Vui lòng nhập địa chỉ email" name="email" class="" value="">

            </div>

            <div class="form-group col-4">
               <label for="province">Tỉnh/Thành phố</label>
               <select id="province" class="form-control" name="province">
                  <option value="">Chọn Tỉnh/Thành phố</option>
               </select>
            </div>

            <div class="form-group col-4">
               <label for="district">Quận/Huyện</label>
               <select id="district" class="form-control" name="district" disabled>
                  <option value="">Chọn Quận/Huyện</option>
               </select>
            </div>

            <div class="form-group col-4">
               <label for="ward">Phường/Xã</label>
               <select id="ward" class="form-control" onchange="calculateShippingFee()" name="ward" disabled>
                  <option value="">Chọn Phường/Xã</option>
               </select>
            </div>

            <div class="form-group">
               <label for="address">Địa chỉ cụ thể</label>
               <input type="text" placeholder="Nhập số nhà, đường..." name=" " id="detailedAddress"
                  class="form-control">
               <input type="hidden" placeholder="" name="address" id="fullAddressOutput"
                  class="form-control">

            </div>


            <div class="form-group">
               <label for="note">Ghi chú</label>
               <textarea placeholder="Ghi chú" name="note"></textarea>

            </div>
         </div>


         <div class="payment-method col-5 d-flex flex-column justify-content-between">
            <h5 class="text-black "><b> Tóm tắt đơn hàng</b></h5>

            <div class="summary-item">
               <span>Tổng tiền hàng:</span>
               <span id="totalPrice"> 0 VNĐ</span>
            </div>

            <div class="summary-item">
               <span>Phí vận chuyển:</span>
               <span id="priceShipping"> </span>
            </div>



            <div>
               <label for="payment-method" class="form-label fw-bold">Phương thức thanh toán:</label>
               <!-- Thanh toán khi nhận hàng -->
               <div class="mb-1">
                  <label class="d-inline-flex align-items-center">
                     <input type="radio" alt="cod" name="iCheck" class="iCheck iradio_flat-blue me-2" value="1" checked
                        style="width: max-content;">
                     Thanh toán khi nhận hàng
                  </label>
               </div>

               <!-- Ví điện tử -->
               <div class="mb-1">
                  <label class="d-inline-flex align-items-center">
                     <input type="radio" alt="cod" name="iCheck" class="iCheck iradio_flat-blue me-2" value="2">
                     Ví
                     <img src="/assets/Client/image/icon/OIP.jpg" alt="" class="ms-2"
                        style="width: 54px; height: 24px;">
                  </label>
               </div>
            </div>
            <hr>


            <div class="thanhtoan">
               <div class="d-flex justify-content-between align-items-center">
                  <div class="summary-item total">
                     <span><strong>Tổng thanh toán:</strong></span> <br>
                     <span id="finalTotal">0 VNĐ</span>
                  </div>
                  <a href="/thank" class="btn btn-primary" name="redirect">Thanh toán</a>
               </div>
            </div>
         </div>

      </div>
   </form>
</div>